@using Domain.Dtos
@model MemberLoginForm

@{
    Layout = "_Layout_CenterScreen";
    ViewData["Title"] = "Log In";
}

<section id="login">
    <form asp-controller="Auth" asp-action="Login" method="post" novalidate enctype="multipart/form-data">

        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

        <h1>@ViewData["Title"]</h1>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email"/>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" />
        </div>

        @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
        {
            <div class="alert-notification error">
                @ViewBag?.ErrorMessage
            </div>
        }
        <div class="form-group">
            <button class="btn" type="submit">Log In</button>
        </div>

        <div class="form-footer">
            <span>Don't have an account?</span>
            <a asp-controller="Auth" asp-action="SignUp">Sign Up</a>
        </div>
    </form>


  
</section>
