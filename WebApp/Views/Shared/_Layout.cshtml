<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Nestor Admin Portal</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="https://kit.fontawesome.com/a576612222.css" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
   <div class="wrapper-portal">
        <aside class="sidebar">
            <partial name="Partials/_LinkLogotype" />
            <partial name="Partials/_NavLinks" />
        </aside>
        <header class="header">
            <form method="get" asp-controller="" asp-action="" novalidate class="search">
                <i class="fas fa-search"></i>
                <input type="search" class="form-search-input" placeholder="Search..."/>
            </form>



            <div id="notification-container">

                <button type="button" data-type="dropdown" data-target="#notification-dropdown" class="btn btn-notification">
                    <i class=" dot dot-red fas fa-circle"></i>
                    <i class="fas fa-bell"></i>
                </button>
                <div id="notification-dropdown" class="dropdown ">

                    <div class="dropdown-header">
                        <h4>Notifications</h4>
                        <div class="badge badge-red">99+</div>
                    </div>
                    <div class="divider"></div>
                    <div class="notifications">
                        <div class="notification">
                            <div class="user-image">
                                 <img src="~/images/users/user-template-male-green-svg.svg" alt="template avatar" />
                            </div>
                            <span class="heading">Rasmus Waleij created a new project.</span>
                            <span class="time">9 min ago</span>
                            <button class="btn-close"></button>
                        </div>
                        <div class="notification">
                            <div class="user-image">
                                <img src="~/images/users/user-template-male-green-svg.svg" alt="template avatar" />
                            </div>
                            <span class="heading">Rasmus Waleij added a new member.</span>
                            <span class="time">9 min ago</span>
                            <button class="btn-close"></button>
                        </div>
                    </div>

                </div>
            </div>
            


            <div id="account-container">
                <button type="button" data-type="dropdown" data-target="#account-dropdown" class="btn btn-account">
                    <img src="~/images/users/user-template-male-green-svg.svg" alt="template avatar" />

                </button>
                <div id="account-dropdown" class="dropdown ">
                    <div class="dropdown-header">
                        <div class="account-name">
                            <img src="~/images/users/user-template-male-green-svg.svg" alt="template avatar" />
                            <span>Rasmus Waleij</span>
                        </div>
                        <div class=""></div>
                    </div>
                    <div class="dropdown-body">
                        <nav class="dropdown-options">
                            <a class="dropdown-option">
                                <label for="darkModeToggle" class="switch-label">
                                    <i class="fa-solid fa-cog"></i>
                                    <span >Darkmode</span>
                                </label>
                                <label  class="switch">
                                    <input type="checkbox" id="darkModeToggle" data-type="toggle" data-func="darkmode"/>
                                    <span class="slider"></span>
                                </label>
                            </a>


                        </nav>
                        <div class="divider"></div>
                       <nav class="dropdown-actions">
                            <a class="dropdown-action" href="#">
                                <i class="fa-solid fa-right-from-bracket"></i>
                                <span>Logout</span>
                            </a>
                          

                       </nav>
                    </div>
                </div>

            </div>
            
@*             <a class="btn btn-logout" asp-controller="Auth" asp-action="Logout">Log out</a>
 *@            
        </header>
        <main class="main">
            @RenderBody()
        </main>
   </div>
            
      
   
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
